{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap"
    },
    {
      "src": "/robots.txt", 
      "dest": "/api/robots"
    }
  ],
  "env": {
    "NEXT_PUBLIC_BRAND_NAME": "SUKUNERGY",
    "NEXT_PUBLIC_BASE_URL": "https://sukunergy.vercel.app"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
